<%- include("layout") %>

<div class="container">
  <main>
    <form action="/tasks" method="POST">
      <input type="text" name="title" placeholder="New Task" required />
      <input type="date" name="dueDate" required />
      <input type="time" name="dueTime" required />
      <button type="submit">Add Task</button>
    </form>

    <ul>
      <% tasks.forEach((task) => { %>
        <li class="<%= task.completed ? 'completed' : '' %>">
          <span><%= task.title %></span>
          <span>Due: <%= task.dueDate %> <%= task.dueTime %></span>
          <form action="/tasks/<%= task.id %>?_method=PUT" method="POST">
            <button type="submit"><%= task.completed ? "Undo" : "Complete" %></button>
          </form>
          <a href="/tasks/<%= task.id %>/edit">Edit</a>
          <form action="/tasks/<%= task.id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </main>

  <footer>
    <p>Â© 2024 To-Do App | Made by Sharath</p>
  </footer>
</div>






